--fullbright script by LikeDynamite1 on GitHub
pcall(function()

	local l = game:GetService("Lighting")
	l.Ambient = Color3.fromRGB(255, 255, 255)
	l.Brightness = 1
	l.FogEnd = 1e10

	for i, v in pairs(l:GetDescendants()) do
		if v:IsA("BloomEffect") or v:IsA("BlurEffect") or v:IsA("ColorCorrectionEffect") or v:IsA("SunRaysEffect") then
			v.Enabled = false
		end
	end

	l.Changed:Connect(function()
		l.Ambient = Color3.fromRGB(255, 255, 255)
		l.Brightness = 1
		l.FogEnd = 1e10
	end)

	spawn(function()
		local char = game:GetService("Players").LocalPlayer.Character
		while wait() do
			repeat wait() until char ~= nil
			if not char.HumanoidRootPart:FindFirstChildWhichIsA("PointLight") then
				local ht = Instance.new("PointLight", char.HumanoidRootPart)
				ht.Brightness = 1
				ht.Range = 60
			end
		end
	end)
end)
