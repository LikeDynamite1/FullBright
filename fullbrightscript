--fullbrightscript by LikeDynamite1 on GitHub
pcall(function() local l=game:GetService("Lighting") local c=Color3.fromRGB(255,255,255) local b,f=1,1e10 local p={string.char(65,109,98,105,101,110),string.char(66,114,105,103,104,116,110),string.char(70,111,103,69,110,100)} l[p[1]],l[p[2]],l[p[3]]=c,b,f for _,e in pairs(l:GetDescendants())do if e:IsA("BloomEffect")or e:IsA("BlurEffect")or e:IsA("ColorCorrectionEffect")or e:IsA("SunRaysEffect")then e.Enabled=false end end l.Changed:Connect(function() l[p[1]],l[p[2]],l[p[3]]=c,b,f end) spawn(function() local pl=game.Players.LocalPlayer local ch=pl.Character or pl.CharacterAdded:Wait() while wait()do if not ch.HumanoidRootPart:FindFirstChildWhichIsA(string.char(80,111,105,110,84,101,110,103,104,116))then local lgt=Instance.new(string.char(80,111,105,110,116,76,105,103,104,116),ch.HumanoidRootPart) lgt.Brightness,lgt.Range=b,60 end end end) end)
